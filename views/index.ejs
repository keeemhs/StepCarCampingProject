        <script>
            var datas = JSON.parse('<%- JSON.stringify(result) %>');
            console.log(datas);

            function theme_clicked(num) {
                const theme_items = document.querySelector('.theme_items');
                theme_items.textContent = '';
                num = num > 3 ? num + 1 : num;
                for (let i = 0; i < 6; i++) {
                    const id = Number(num - 1) * 10 + i;
                    theme_items.innerHTML += ` 
                        <li>
                            <a href="/spot">
                                <span><img src=${datas[id].image} /></span>
                                <div class="desc">
                                    <div class="title">${datas[id].spotName}</div>
