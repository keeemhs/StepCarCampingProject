    <style>
        @font-face {
            font-family: 'Dovemayo_gothic';
            src: url('https://cdn.jsdelivr.net/gh/projectnoonnu/noonfonts_2302@1.1/Dovemayo_gothic.woff2') format('woff2');
            font-weight: normal;
            font-style: normal;
        }
        a {
            text-decoration: none;
        }
        p {
            color: black;
        }
        span {
            color: black;
        }
        a:hover {
            text-decoration: none !important;
        }
        .main_section .recommd ul li {
            float: left;
            margin-left: 20px;
            width: 300px;
            height: 300px;
            border-radius: 10px;
            /* overflow: hidden; */
        }
        .img_area > img {
            width: 198px;
            height: 198px;
        }
        .items_list {
            display: flex;
            justify-content: space-around;
        }
        ul {
            list-style: none;
        }

        .theme_tour .theme_tabs {
            display: flex;
            margin-bottom: 24px;
            justify-content: center;
        }
        .desc {
            max-width: 300px;
        }

        .theme_tour .theme_tabs::after {
            display: block;
            content: '';
            clear: both;
        }

        .theme_tour .theme_tabs li {
            float: left;
            padding: 0 20px;
            margin-right: 10px;
            margin-bottom: 13px;
            line-height: 42px;
            font-size: 16px;
            font-weight: 400;
            color: #999;
            border: 1px solid #ddd;
            border-radius: 50px;
            cursor: pointer;
            letter-spacing: -0.08em;
        }

        .theme_items_wrap .theme_items li a img {
            width: 100%;
            height: 75%;
        }
        .theme_items_wrap {
            display: flex;
            margin: auto;
            justify-content: center;
        }
        .theme_items {
            display: grid;
            margin-bottom: 30px;
            grid-template-rows: repeat(2, 300px);
            grid-template-columns: repeat(3, 300px);
            grid-column-gap: 60px;
            grid-row-gap: 20px;
        }
        .theme_tabs > li:hover {
            box-shadow: 0 0 10px #43604d; /* 파스텔 느낌의 그림자 */
            background-color: #43604d;
            color: white;
        }
        .carousel-item > img {
            max-height: 500px;
            object-fit: contain;
        }
        /* .carousel-item {
            height: 500px;
        } */
        #body_container {
            font-family: Dovemayo_gothic;
            /*margin-left: 5%;
            margin-right: 5%; */
        }
        .title {
            font-size: 23px;
            font-weight: bold;
            text-align: center;
            color: black;
        }
        @media screen and (max-width: 1080px) {
            .items_list {
                display: grid;
                place-items: center;
                grid-template-rows: repeat(2, 200px);
                grid-template-columns: repeat(2, 200px);
                grid-column-gap: 20px;
                grid-row-gap: 20px;
            }
            .img_area > img {
                margin: auto;
                margin-left: 20px;
                width: 90%;
                height: 90%;
            }
        }
        @media screen and (max-width: 860px) {
            .more {
                color: white;
            }
            .theme_items {
                display: grid;
                grid-template-rows: repeat(3, 200px);
                grid-template-columns: repeat(2, 200px);
                grid-column-gap: 20px;
                grid-row-gap: 60px;
            }
        }

        /* 이미지 스타일 조정 */
        span > img {
            border-radius: 5px;
        }
    </style>

